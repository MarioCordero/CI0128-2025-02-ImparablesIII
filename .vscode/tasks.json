{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-backend",
      "command": "/usr/local/share/dotnet/dotnet",
      "type": "shell",
      "args": [
        "build",
        "${workspaceFolder}/backend/backend-lab.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "options": {
        "shell": {
          "executable": "/bin/zsh",
          "args": ["-c"]
        },
        "env": {
          "PATH": "${env:PATH}:/usr/local/share/dotnet"
        }
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build-frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "serve"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*Local:.*http://localhost:8080.*"
        }
      }
    }
  ]
}